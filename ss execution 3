/* La construction du réseau peut se faire à partir d'un fichier dont le nom est passé en paramètre
Le fichier contient : ordre, taille et liste des arcs avec leurs poids */
Graphe* lire_graphe(char* nomFichier) {
    Graphe* graphe;
    FILE* ifs = fopen(nomFichier, "r");
    int ordre, taille, s1, s2, poids;

    if (!ifs) {
        printf("Erreur de lecture fichier\n");
        exit(-1);
    }

    fscanf(ifs, "%d", &ordre);
    graphe = CreerGraphe(ordre);
    graphe->ordre = ordre;

    // Passer tous les sommets
    for (int i = 0; i < ordre; ++i) {
        fscanf(ifs, "%*d");  // Lire les sommets sans les stocker
    }

    // Lire la taille du graphe
    fscanf(ifs, "%d", &taille);
    graphe->taille = taille;

    // Lire les arêtes du graphe
    for (int i = 0; i < taille; ++i) {
        fscanf(ifs, "%d%d%d", &s1, &s2, &poids);
        graphe->pSommet = CreerArete(graphe->pSommet, s1, s2, poids);
    }

    fclose(ifs);
    return graphe;
}
