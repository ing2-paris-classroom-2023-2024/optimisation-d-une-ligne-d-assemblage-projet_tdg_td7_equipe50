    // Trier les arÃªtes dans l'ordre croissant des poids
    for (int i = 0; i < compteur - 1; i++) {
        for (int j = 0; j < compteur - i - 1; j++) {
            if (tab_arc[j]->valeur > tab_arc[j + 1]->valeur) {
                pArc temporaire = tab_arc[j];
                tab_arc[j] = tab_arc[j + 1];
                tab_arc[j + 1] = temporaire;
            }
        }
    }
